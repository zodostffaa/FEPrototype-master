<div class="pages">
	<div data-page="cinema" class="page">

		<!-- Search bar -->
		<form class="searchbar searchbar-init">
			<div >
				<p><a href="#" class="button" style="margin-right:10px;background-color:white;border-color:white">上海 <i class="icon icon-chevron_down"></i></a></p>
			</div>
			<div class="searchbar-input  cinemapopup">
				<input type="search" placeholder="搜索影吧" readonly>
				<a href="#" class="searchbar-clear"></a>
			</div>
		</form>

		<div class="page-content infinite-scroll">
			<div class="list-block media-list searchbar-found">
				<div class="list-group cinema-group">
					<ul>
						{{#each cinemas}}
						<li >
							<a href="cinemadetail.hbs">
								<div class="item-content">
									<div class="item-media radius"><img src="img/i-f7-ios.png" width="77"></div>
									<div class="item-inner">
										<div class="item-title-row">
											<div class="item-title">{{name}}</div>
										</div>
										<div class="item-subtitle">
											<div class="row">
												<div class="item-text">{{location}}</div>
												<div class="item-after">{{distance}}</div>
											</div>
										</div>

									</div>
								</div>
							</a>
						</li>
						{{/each}}

					</ul>
				</div>
			</div>
			<div class="content-block searchbar-not-found" style="display: none;">
				Nothing found
			</div>
		</div>
		<!-- Bottom Toolbar-->
		<div class="toolbar">
			<div class="toolbar-inner">
				<!-- Toolbar links -->
				<a href="#" class="link">10km以内</a>
			</div>
		</div>
	</div>
</div>

